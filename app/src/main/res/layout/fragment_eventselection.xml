<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".eventselection">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Select Your Event"
        android:textColor="#808080"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="Select Event Type: "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/event_type"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/tv1" />

    <TextView
        android:id="@+id/package_tv"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_below="@id/tv1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Select Package Type: "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/packages"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv1"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/package_tv" />

    <TextView
        android:id="@+id/selected_pkg_details"
        android:layout_width="345dp"
        android:layout_height="250dp"
        android:layout_below="@id/packages"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/frame"
        android:elevation="10dp"
        android:textAlignment="center"
        android:scrollbars="vertical"
        android:stateListAnimator="@null"
        android:text="Pkg"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/guests_comming_tv"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:layout_below="@id/selected_pkg_details"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Select Number of guests comming: "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/slider1"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_below="@id/selected_pkg_details"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/guests_comming_tv"
        android:value="12.34"
        android:valueFrom="0.0"
        android:valueTo="50.0" />

    <TextView
        android:id="@+id/spinner_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_pkg_details"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/packages"
        android:gravity="center"
        android:text="0"
        android:textColor="#808080"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/guests_comming_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        android:drawableTint="#04B60B"
        android:focusableInTouchMode="true"
        android:hint=" Select Event Date"
        android:inputType="datetime" />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_below="@id/editText1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="7dp"
        android:gravity="left"
        android:text="Select Time of Event: "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/date_time_spinner"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/editText1"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/date_time" />

    <Button
        android:id="@+id/check_availability"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/date_time_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#04B60B"
        android:elevation="10dp"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="check availability"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/Generate_Bill"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/check_availability"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="Generate Bill"
        android:textColor="#04B60B"
        android:textSize="13sp"
        app:cornerRadius="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

</RelativeLayout>