<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <ImageView
            android:id="@+id/book_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/booking" />

        <TextView
            android:id="@+id/booking_tv"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/book_icon"
            android:text="Booking#"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile"
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:layout_below="@id/book_icon"
            android:layout_marginTop="60dp"
            app:civ_border_color="@color/black" />


        <TextView
            android:id="@+id/t1"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@id/book_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="User Name: "
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/book_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/t1"
            android:text="Name"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:layout_below="@id/t1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="Guests Comming: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_of_guests_coming"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/t1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/t2"
            android:text="Guests"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:layout_below="@id/t2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="Package Selected: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pkg_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/t2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/t3"
            android:text="PackageName"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@id/t3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="Event Date: "
            android:textColor="#B80D47"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/t3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/t4"
            android:text="date"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@id/t3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="Event Date: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t6"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@id/event_date"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="Event Time: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/event_date"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/t6"
            android:text="Event Time: "
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t8"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@id/t6"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="Event Type: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t9"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/t6"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/t8"
            android:text="Event Type: "
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t10"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_below="@id/t8"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="Package Price: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t11"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/t8"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/t10"
            android:text="Pkg Price: "
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t12"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/t10"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/user_profile"
            android:text="Token Payed: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t13"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/t10"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/t12"
            android:text="Token Payed: "
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>