<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Bookings">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="65dp"
        android:text="Search By Name:"
        android:textColor="#808080"
        android:textSize="21sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/search_box"
        style="@style/Widget.AppCompat.EditText"

        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawableTint="#04B60B"
        android:hint="Search" />

    <ImageButton
        android:id="@+id/search_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/search_box"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_search_24"
        android:stateListAnimator="@null"
        app:strokeColor="@color/black"
        app:strokeWidth="0.5dp"
        app:tint="#4AE838" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/search_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Search By Date:"
        android:textColor="#808080"
        android:textSize="21sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv2"
        android:layout_marginLeft="20dp"
        android:drawableTint="#04B60B"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        android:focusableInTouchMode="true"
        android:hint=" Select Event Date"
        android:inputType="datetime"
        app:tint="#4AE838" />

    <ImageButton
        android:id="@+id/search_by_date"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/editText1"
        android:backgroundTint="#34F627"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_search_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/editText1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="OR"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/ch1"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@id/t3"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:text="Show All Pending Bookings:"
        android:textColor="#808080"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ch1"
        android:layout_marginTop="5dp" />

</RelativeLayout>