<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="false"
    tools:context=".Packages">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:text="Delete Package"
            android:textColor="#808080"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/packages"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/delete_pkg"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/packages"
            android:backgroundTint="@color/white"
            android:drawableRight="@drawable/ic_baseline_delete_24"
            android:drawableTint="#04B60B"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:text="delete"
            android:textColor="#04B60B"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_below="@id/delete_pkg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="View Package Details"
            android:textColor="#808080"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/packages1"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/pkg_details"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/packages1"
            android:backgroundTint="#04B60B"
            android:drawableRight="@drawable/ic_baseline_find_in_page_24"
            android:drawableTint="@color/white"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:text="View"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/selected_pkg_details"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_below="@id/pkg_details"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/frame"
            android:elevation="10dp"
            android:paddingLeft="10dp"
            android:scrollbars="vertical"
            android:stateListAnimator="@null"
            android:text="package details"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_below="@id/selected_pkg_details"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="Add or Delete Packages:"
            android:textColor="#808080"
            android:textSize="18sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@id/pkg_name"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_below="@id/tv3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_baseline_food_bank_24"
            android:hint=" Enter your package name..."
            android:inputType="textPersonName"
            android:textSize="13.5sp" />

        <EditText
            android:id="@+id/pkg_price"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_below="@id/pkg_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:drawableLeft="@drawable/ic_baseline_money_24"
            android:hint=" Enter your package price [in Pkr.]..."
            android:inputType="numberDecimal"
            android:textSize="13.5sp" />

        <EditText
            android:id="@+id/pkg_description"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_below="@id/pkg_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:drawableLeft="@drawable/ic_baseline_description_24"
            android:hint=" Enter your package description..."
            android:inputType="textMultiLine"
            android:isScrollContainer="false"
            android:textColor="#F41111"
            android:textSize="13.5sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_pkg"
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:layout_below="@id/pkg_description"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#04B60B"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:text="Add Package"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />


        <Button
            android:id="@+id/update_pkg"
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:layout_below="@id/add_pkg"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:text="Update Package"
            android:textColor="#04B60B"
            android:textSize="13sp"
            app:cornerRadius="25dp" />

    </RelativeLayout>

</ScrollView>